{
  "name": "mini-game-hub",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "concurrently \"bun run build:server\" \"bun run build:go-engine\"",
    "build:go-engine": "cd apps/go-engine && go build -o tmp/main main.go",
    "build:server": "nest start server --watch",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "concurrently \"bun run dev:server\" \"bun run dev:colyseus\" \"bun run dev:go-engine\"",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/mini-game-hub/main",
    "dev:go-engine": "cd apps/go-engine && air",
    "dev:colyseus": "bun --watch ./apps/colyesus/src/index.ts",
    "dev:server": "nest start server --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/mini-game-hub/test/jest-e2e.json",
    "codegen:proto-go": "protoc --go_out=./apps/go-engine/internal/generated --go_opt=paths=import ./libs/shared/src/proto/messages.proto",
    "codegen:proto-node": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto.CMD --ts_proto_out=. --ts_proto_opt=nestJs=true,outputEncodeMethods=true ./libs/shared/src/proto/messages.proto"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.7.0",
    "@colyseus/bun-websockets": "^0.16.4",
    "@colyseus/monitor": "^0.16.0",
    "@colyseus/playground": "^0.16.4",
    "@colyseus/schema": "^3.0.57",
    "@colyseus/tools": "^0.16.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@protobuf-ts/runtime": "^2.11.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "colyseus": "^0.16.4",
    "express": "^4.18.2",
    "ioredis": "^5.7.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@colyseus/loadtest": "^0.16.0",
    "@colyseus/testing": "^0.16.0",
    "@types/mocha": "^10.0.1",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.0",
    "tsx": "^4.10.2",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-proto": "^2.7.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
    }
  }
}
